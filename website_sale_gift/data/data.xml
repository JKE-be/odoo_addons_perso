            <field name="type">consu</field>
            <field name="is_gift">True</field>
            <field name="image" type="base64" file="website_sale_gift/static/src/img/gift-card-10.jpg"/>
        </record>

        <record id="voucher_gift_25" model="product.product">
            <field name="name">Gift Card</field>
